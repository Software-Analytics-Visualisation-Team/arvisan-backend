{
  "entryFile": "src/index.ts",
  "noImplicitAdditionalProperties": "throw-on-extras",
  "controllerPathGlobs": ["src/controllers/**/*Controller.ts"],
  "spec": {
    "basePath": "/api",
    "outputDirectory": "build",
    "specVersion": 3,
    "host": "localhost:3000",
    "schemes": [
      "http",
      "https"
    ]
  },
  "routes": {
    "basePath": "/api",
    "routesDir": "build",
    "middleware": "express"
  }
}