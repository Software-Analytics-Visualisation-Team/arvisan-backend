{
  "entryFile": "src/index.ts",
  "noImplicitAdditionalProperties": "throw-on-extras",
  "controllerPathGlobs": ["src/controllers/**/*Controller.ts"],
  "spec": {
    "basePath": "/api",
    "outputDirectory": "build",
    "specVersion": 3,
    "host": "",
    "schemes": [
      "http",
      "https"
    ],
    "securityDefinitions": {
      "basicAuth": {
        "type": "http",
        "scheme": "basic"
      }
    }
  },
  "routes": {
    "basePath": "/api",
    "routesDir": "build",
    "middleware": "express"
  },
  "multerOpts": {
    "limits": {
      "fileSize": 134217728
    }
  }
